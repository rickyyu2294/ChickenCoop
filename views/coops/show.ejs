<% layout('layouts/boilerplate') %> 

<div class="row justify-content-center">
    <div class="col-10 ">
        <div class="card my-3">
            <img src="<%= coop.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= coop.name %></h5>
                <p class="card-text"><%= coop.description %></p>
                <a class="btn btn-primary" href="/coops/<%= coop._id %>/edit">Edit</a>
                <form class="d-inline" action="/coops/<%= coop._id %>/delete?_method=Delete" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>        

        <div class="card">
            <div class="card-body">
                <form action="/coops/<%=coop._id%>/chickens" method="POST">
                    <h4>Add Chicken</h4>
                    <div class="mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input type="text" id="name" class="form-control" name="chicken[name]">
                    </div>
    
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" name="chicken[description]" id="description" cols="30" rows="5"></textarea>
                    </div>
    
                    <button class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>