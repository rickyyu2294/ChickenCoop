<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Coop</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/coops/<%= coop._id %>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="coop[name]" value="<%= coop.name %>" required>
                </div>
        
                <div class="mb-3">
                    <label class="form-label" for="images">Add Images</label>
                    <input class="form-control" type="file" id="images" name="images" multiple>
                </div>
        
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="coop[description]"><%= coop.description %></textarea>
                </div>
        
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
                
            </div>
        </form>
    </div>
</div>