<% layout('layouts/boilerplate') %> 
<h1>Edit</h1>
<form action="/coops/<%= coop._id %>?_method=PUT" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="coop[name]" value="<%= coop.name %>">

        <label for="description">Description</label>
        <input type="text" id="description" name="coop[description]" value="<%= coop.description %>">

        <button>Update</button>
    </div>
</form>

<div>
    <a href="/coops/<%= coop._id %>">Back to Coop</a>
</div>
