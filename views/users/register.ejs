<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Register</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/users" method="POST" novalidate>
            <div class="mb-3">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="user[name]" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" type="email" id="email" name="user[email]" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="user[password]" required>
                </div>
        
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                
            </div>
        </form>
    </div>
</div>